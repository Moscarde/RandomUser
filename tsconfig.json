{
	"compilerOptions": {
		"target": "ES2019",
		"module": "CommonJS",
		"lib": ["ESNext", "DOM"],
		"removeComments": true,
		"noEmitOnError": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": false
	},
	"include": ["src/**/*.ts"]
}
